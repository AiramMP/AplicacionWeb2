<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/general.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/notificaciones.js"></script>
    <script src="/javascripts/eventos.js"></script>
    <script src="/javascripts/toastManager.js"></script>
    <script>
        window.configuracionAccesibilidad = <%- JSON.stringify(configuracionAccesibilidad || {}) %>;
    </script>
    <script src="/javascripts/configurable.js"></script>
    <title>Mis Notificaciones</title>
</head>
<body>
    <%- include('header'); %>
    <%- include('navUser'); %>

    <div class="container mt-5">
        <h1 class="mb-4">Mis Notificaciones</h1>
        <% if (correos.length === 0) { %>
            <div class="alert alert-info" role="alert">
                No tienes notificaciones.
            </div>
            <div class=" extra-margin-bottom"></div>
        <% } else { %>
            <div class="list-group">
                <% correos.forEach((correo) => { %>
                    <button 
                        type="button" 
                        class="list-group-item list-group-item-action d-flex justify-content-between align-items-center <% if (correo.Visto === 0) { %> list-group-item-warning <% } else { %> list-group-item-light <% } %>"
                        data-id="<%= correo.id %>">
                        <div>
                            <h5 class="mb-1"><%= correo.Asunto %></h5>
                            <small><%= correo.Fecha %></small>
                        </div>
                        <% if (correo.Visto === 0) { %>
                            <span class="badge bg-warning text-dark">No leído</span>
                        <% } else { %>
                            <span class="badge bg-success">Leído</span>
                        <% } %>
                    </button>
                <% }); %>
            </div>
        <% } %>
    </div>
    
    <!-- Modal contenedor -->
    <div id="modalContainer"></div>
    
    <%- include('footer'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
