<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/stylesheets/general.css">
        <link rel="stylesheet" href="/stylesheets/eventos.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/6.1.15/index.min.css">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/6.1.15/index.global.min.js"></script>
        <script>
            window.configuracionAccesibilidad = <%- JSON.stringify(configuracionAccesibilidad || {}) %>;
        </script>
        <script src="/javascripts/configurable.js"></script>
        <script src="/javascripts/eventos.js"></script>
        <script src="/javascripts/toastManager.js"></script>

        <title>Eventos</title>
    </head>
<body>

    <%- include('header'); %>
    <%- include('navUser'); %>

    <div class="container mt-4">
        <h1 class="text-center">Historial de Asistentes</h1>
        <% if (!asistentes || asistentes.length === 0) { %>
            <p class="text-center">No hay asistentes registrados para este evento.</p>
        <% } else { %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Fecha de Inscripci√≥n</th>
                    </tr>
                </thead>
                <tbody>
                    <% asistentes.forEach(asistente => { %>
                        <tr>
                            <td><%= asistente.nombre %></td>
                            <td><%= asistente.correo %></td>
                            <td><%= new Date(asistente.fecha_inscripcion).toLocaleString() %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
    </div>

    <%- include('footer'); %>
</body>
</html>
