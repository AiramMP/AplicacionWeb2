<div class="modal fade" id="notificacionModal<%= correo.id %>" tabindex="-1" aria-labelledby="notificacionModalLabel<%= correo.id %>" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="notificacionModalLabel<%= correo.id %>"><%= correo.Asunto || 'Sin Asunto' %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>De:</strong> <%= correo.CorreoEmisor || 'Sistema' %></p>
                <p><strong>Mensaje:</strong> <%= correo.Mensaje || 'Sin mensaje' %></p>
                <p><strong>Fecha:</strong> <%= correo.Fecha || 'Sin fecha' %></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
